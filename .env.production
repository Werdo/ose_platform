# ════════════════════════════════════════════════════════════════════════════
# OSE PLATFORM - Production Environment Configuration
# ════════════════════════════════════════════════════════════════════════════

# ──────────────────────────────────────────────────────────────────────────
# APPLICATION SETTINGS
# ──────────────────────────────────────────────────────────────────────────
APP_NAME=OSE Platform
APP_VERSION=1.0.0
ENVIRONMENT=production
DEBUG=False
LOG_LEVEL=INFO

# ──────────────────────────────────────────────────────────────────────────
# SERVER CONFIGURATION
# ──────────────────────────────────────────────────────────────────────────
API_HOST=0.0.0.0
API_PORT=8001
BACKEND_URL=https://platform.oversunenergy.com/api
FRONTEND_URL=https://platform.oversunenergy.com

# ──────────────────────────────────────────────────────────────────────────
# MONGODB DATABASE
# ──────────────────────────────────────────────────────────────────────────
MONGODB_HOST=mongodb
MONGODB_PORT=27017
MONGODB_DB_NAME=ose_platform
MONGODB_USER=admin
MONGODB_PASSWORD=oseplatform2025secure
MONGODB_ROOT_USER=admin
MONGODB_ROOT_PASSWORD=oseplatform2025secure

# Connection URI
MONGODB_URI=mongodb://admin:oseplatform2025secure@mongodb:27017/ose_platform?authSource=admin

# ──────────────────────────────────────────────────────────────────────────
# SECURITY & AUTHENTICATION
# ──────────────────────────────────────────────────────────────────────────
# JWT Configuration
JWT_SECRET_KEY=ose_platform_production_secret_key_2025_secure_change_in_production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Security
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=True
PASSWORD_REQUIRE_LOWERCASE=True
PASSWORD_REQUIRE_DIGITS=True
PASSWORD_REQUIRE_SPECIAL=True

# ──────────────────────────────────────────────────────────────────────────
# CORS CONFIGURATION
# ──────────────────────────────────────────────────────────────────────────
CORS_ORIGINS=["https://platform.oversunenergy.com","http://localhost:3001"]
CORS_CREDENTIALS=True
CORS_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_HEADERS=*

# ──────────────────────────────────────────────────────────────────────────
# API CONFIGURATION
# ──────────────────────────────────────────────────────────────────────────
API_V1_PREFIX=/api/v1
API_DOCS_ENABLED=False
API_REDOC_ENABLED=False
MAX_REQUEST_SIZE=10485760
REQUEST_TIMEOUT=30

# ──────────────────────────────────────────────────────────────────────────
# RATE LIMITING
# ──────────────────────────────────────────────────────────────────────────
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# ──────────────────────────────────────────────────────────────────────────
# FILE UPLOAD SETTINGS
# ──────────────────────────────────────────────────────────────────────────
UPLOAD_DIR=/tmp/ose_uploads
MAX_UPLOAD_SIZE=52428800
ALLOWED_EXTENSIONS=pdf,png,jpg,jpeg,gif,xlsx,xls,csv,doc,docx

# ──────────────────────────────────────────────────────────────────────────
# EMAIL CONFIGURATION (if needed)
# ──────────────────────────────────────────────────────────────────────────
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@oversunenergy.com
SMTP_FROM_NAME=OSE Platform

# ──────────────────────────────────────────────────────────────────────────
# REDIS CACHE (optional - for future implementation)
# ──────────────────────────────────────────────────────────────────────────
REDIS_ENABLED=False
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ──────────────────────────────────────────────────────────────────────────
# LOGGING
# ──────────────────────────────────────────────────────────────────────────
LOG_DIR=/var/log/ose
LOG_FILE=ose_platform.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5
LOG_FORMAT=json

# ──────────────────────────────────────────────────────────────────────────
# MONITORING & HEALTH CHECKS
# ──────────────────────────────────────────────────────────────────────────
HEALTH_CHECK_ENABLED=True
METRICS_ENABLED=False
SENTRY_DSN=

# ──────────────────────────────────────────────────────────────────────────
# TIMEZONE
# ──────────────────────────────────────────────────────────────────────────
TZ=Europe/Madrid
